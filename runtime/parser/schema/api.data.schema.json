{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "api.data.schema.json",
    "type": "object",
    "oneOf": [
        {
            "properties": {
                "sql": {
                    "type": "string"
                },
                "connector": {
                    "type": "string"
                }
            },
            "required": [
                "sql"
            ]
        },
        {
            "properties": {
                "metrics_sql": {
                    "type": "string"
                }
            },
            "required": [
                "metrics_sql"
            ]
        },
        {
            "properties": {
                "api": {
                    "type": "string"
                },
                "args": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "required": [
                "api"
            ]
        },
        {
            "properties": {
                "glob": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "additionalProperties": true
                        }
                    ]
                }
            },
            "required": [
                "glob"
            ]
        },
        {
            "properties": {
                "resource_status": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "required": [
                "resource_status"
            ]
        }
    ]
}