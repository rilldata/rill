{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "report.schema.json",
    "type": "object",
    "properties": {
        "display_name": {
            "type": "string"
        },
        "refresh": {
            "$ref": "schedule.schema.json"
        },
        "watermark": {
            "type": "string",
            "enum": [
                "trigger_time",
                "inherit"
            ]
        },
        "intervals": {
            "type": "object",
            "properties": {
                "duration": {
                    "type": "string"
                },
                "limit": {
                    "type": "integer"
                },
                "check_unclosed": {
                    "type": "boolean"
                }
            },
            "required": [
                "duration",
                "limit",
                "check_unclosed"
            ],
            "additionalProperties": false
        },
        "timeout": {
            "type": "string"
        },
        "query": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "args": {
                    "type": "object",
                    "additionalProperties": true
                },
                "args_json": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false,
            "required": [
                "name"
            ]
        },
        "export": {
            "type": "object",
            "properties": {
                "format": {
                    "type": "string",
                    "enum": [
                        "csv",
                        "xlsx",
                        "parquet"
                    ]
                },
                "limit": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "required": [
                "format"
            ]
        },
        "notify": {
            "$ref": "notify.schema.json"
        },
        "annotations": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "required": [
        "query",
        "notify",
        "export"
    ]
}