{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "api.schema.json",
    "type": "object",
    "properties": {
        "openapi": {
            "type": "object",
            "properties": {
                "summary": {
                    "type": "string"
                },
                "request": {
                    "type": "object",
                    "properties": {
                        "parameters": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": true
                            }
                        }
                    }
                },
                "response": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "security": {
            "$ref": "security_policy.schema.json"
        },
        "skip_nested_security": {
            "type": "boolean"
        }
    },
    "oneOf": [
        {
            "$ref": "data.schema.json"
        }
    ]
}