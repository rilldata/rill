{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "component_variable.schema.json",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "type": {
        "type": "string"
      },
      "value": {
        "description": "The value can be of any type.",
        "type": ["string", "number", "boolean", "object", "array", "null"]
      }
    },
    "required": ["name", "type"],
    "additionalProperties": false
  }
  