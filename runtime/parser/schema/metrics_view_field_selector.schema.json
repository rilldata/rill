{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "metrics_view_field_selector.schema.json",
  "anyOf": [
    {
      "type": "string",
      "description": "Shorthand field selector, interpreted as the name."
    },
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "time_grain": {
          "type": "string",
          "description": "Time grain for time-based dimensions.",
          "enum": [
            "",       
            "ms", "millisecond",
            "s", "second",
            "min", "minute",
            "h", "hour",
            "d", "day",
            "w", "week",
            "month",
            "q", "quarter",
            "y", "year"
          ]
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  ]
}
