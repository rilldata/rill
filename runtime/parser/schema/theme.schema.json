{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "theme.schema.json",
  "type": "object",
  "properties": {
      "colors": {
          "type": "object",
          "properties": {
              "primary": {
                  "type": "string"
              },
              "secondary": {
                  "type": "string"
              }
          },
          "anyOf": [
              {
                  "required": [
                      "primary"
                  ]
              },
              {
                  "required": [
                      "secondary"
                  ]
              }
          ]
      }
  },
  "required": [
      "colors"
  ]
}