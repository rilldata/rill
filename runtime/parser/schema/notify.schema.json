{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "model.schema.json",
    "type": "object",
    "properties": {
        "email": {
            "type": "object",
            "properties": {
                "recipients": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "recipients"
            ],
            "additionalProperties": false
        },
        "slack": {
            "type": "object",
            "properties": {
                "users": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "channels": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "webhooks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                }
            },
            "anyOf": [
                {
                    "required": [
                        "users"
                    ]
                },
                {
                    "required": [
                        "channels"
                    ]
                },
                {
                    "required": [
                        "webhooks"
                    ]
                }
            ],
            "additionalProperties": false
        }
    },
    "anyOf": [
        {
            "required": [
                "email"
            ]
        },
        {
            "required": [
                "slack"
            ]
        }
    ]
}