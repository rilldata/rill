{
  "name": "rill-analytics-extension",
  "version": "0.1.0",
  "displayName": "Rill Analytics",
  "description": "Professional data analysis and report generation using Rill's metrics layer with Google Docs integration",
  "contextFileName": "GEMINI.md",
  "mcpServers": {
    "generator": {
      "command": "node",
      "args": ["${extensionPath}${/}dist${/}server.js"]
    },
    "rill": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "${RILL_MCP_SERVER_URL}",
        "--header",
        "Authorization: Bearer ${RILL_AUTH_TOKEN}"
      ],
      "env": {
        "RILL_MCP_SERVER_URL": "${RILL_MCP_SERVER_URL}",
        "RILL_AUTH_TOKEN": "${RILL_AUTH_TOKEN}"
      }
    }
  }
}
