{
  "name": "@rilldata/rill",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run generate:sveltekit -w web-common && vite build",
    "install-and-build": "npm install && npm run build",
    "check": "svelte-kit sync && svelte-check --no-tsconfig",
    "check:watch": "svelte-check --no-ts-config --watch",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --write .",
    "test": "npx playwright test --project=e2e-chrome",
    "test:all": "npx playwright test",
    "test:chrome": "npx playwright test --project=e2e-chrome",
    "test:safari": "npx playwright test --project=e2e-safari",
    "test:firefox": "npx playwright test --project=e2e-firefox",
    "test:watch": "npm run test -- --watch",
    "manual-publish": "./build-tools/npm_publish.sh"
  },
  "devDependencies": {
    "@clickhouse/client": "^1.11.0",
    "@playwright/test": "^1.50.1",
    "@sveltejs/adapter-static": "^3.0.5",
    "@sveltejs/kit": "^2.7.1",
    "@tanstack/svelte-query": "^5.69.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "playwright": "^1.50.1",
    "postcss-load-config": "^6.0.1",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.4",
    "svelte-preprocess": "^6.0.3",
    "testcontainers": "^11.0.3",
    "tree-kill": "^1.2.2",
    "vitest": "^3.1.1",
    "web-common": "*"
  }
}
