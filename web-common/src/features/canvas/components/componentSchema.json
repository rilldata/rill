        "y": {
          "$ref": "#/definitions/FieldConfig"
        }
      },
      "required": [
        "metrics_view"
      ],
      "type": "object"
    },
    "ChartSortDirection": {
      "enum": [
        "x",
        "y",
        "-x",
        "-y"
      ],
      "type": "string"
    },
    "ComponentAlignment": {
      "additionalProperties": false,
      "properties": {
        "horizontal": {
          "$ref": "#/definitions/HoritzontalAlignment"
