        {
          "additionalProperties": false,
          "properties": {
            "area_chart": {
              "$ref": "#/definitions/ChartConfig"
            }
          },
          "required": [
            "area_chart"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "stacked_bar": {
              "$ref": "#/definitions/ChartConfig"
            }
