{
  "clickhouse": {
    "properties": [
      {
        "key": "host",
        "type": "string",
        "displayName": "Host",
        "placeholder": "localhost",
        "required": true,
        "hint": "Hostname or IP address of the database server",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/clickhouse",
        "secret": false,
        "validation": {
          "pattern": "^(?!https?://)[a-zA-Z0-9.-]+$",
          "patternMessage": "Do not prefix the host with `http(s)://`"
        }
      },
      {
        "key": "port",
        "type": "number",
        "displayName": "Port",
        "placeholder": "9000",
        "required": false,
        "hint": "Port number of the database server",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/clickhouse",
        "secret": false,
        "validation": {
          "pattern": "^\\d+$",
          "patternMessage": "Port must be a number"
        }
      },
      {
        "key": "username",
        "type": "string",
        "displayName": "Username",
        "placeholder": "default",
        "required": false,
        "hint": "Username to connect to the database",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/clickhouse",
        "secret": false
      },
      {
        "key": "password",
        "type": "string",
        "displayName": "Password",
        "placeholder": "password",
        "required": false,
        "hint": "Password to connect to the database",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/clickhouse",
        "secret": true
      },
      {
        "key": "ssl",
        "type": "boolean",
        "displayName": "SSL",
        "required": true,
        "hint": "Use SSL to connect to the database server",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/clickhouse",
        "secret": false
      },
      {
        "key": "database",
        "type": "string",
        "displayName": "Database",
        "placeholder": "default",
        "required": false,
        "hint": "Name of the database to connect to",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/clickhouse",
        "secret": false
      }
    ],
    "dsn": {
      "key": "dsn",
      "type": "string",
      "displayName": "Connection String",
      "placeholder": "clickhouse://localhost:9000?username=default&password=password",
      "required": true,
      "hint": "Full connection string for the database",
      "docsUrl": "https://docs.rilldata.com/reference/connectors/clickhouse",
      "secret": true
    }
  },
  "postgres": {
    "properties": [
      {
        "key": "host",
        "type": "string",
        "displayName": "Host",
        "placeholder": "localhost",
        "required": true,
        "hint": "Hostname or IP address of the PostgreSQL server",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/postgres",
        "secret": false
      },
      {
        "key": "port",
        "type": "number",
        "displayName": "Port",
        "placeholder": "5432",
        "required": false,
        "hint": "Port number of the PostgreSQL server",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/postgres",
        "secret": false
      },
      {
        "key": "database",
        "type": "string",
        "displayName": "Database",
        "placeholder": "postgres",
        "required": true,
        "hint": "Name of the database to connect to",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/postgres",
        "secret": false
      },
      {
        "key": "username",
        "type": "string",
        "displayName": "Username",
        "placeholder": "postgres",
        "required": true,
        "hint": "Username to connect to the database",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/postgres",
        "secret": false
      },
      {
        "key": "password",
        "type": "string",
        "displayName": "Password",
        "placeholder": "password",
        "required": false,
        "hint": "Password to connect to the database",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/postgres",
        "secret": true
      },
      {
        "key": "sslmode",
        "type": "string",
        "displayName": "SSL Mode",
        "placeholder": "require",
        "required": false,
        "hint": "SSL mode for the connection (disable, require, verify-ca, verify-full)",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/postgres",
        "secret": false
      }
    ],
    "dsn": {
      "key": "dsn",
      "type": "string",
      "displayName": "Connection String",
      "placeholder": "postgresql://username:password@localhost:5432/database",
      "required": true,
      "hint": "Full PostgreSQL connection string",
      "docsUrl": "https://docs.rilldata.com/reference/connectors/postgres",
      "secret": true
    }
  },
  "s3": {
    "properties": [
      {
        "key": "bucket",
        "type": "string",
        "displayName": "Bucket",
        "placeholder": "my-data-bucket",
        "required": true,
        "hint": "S3 bucket name",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/s3",
        "secret": false
      },
      {
        "key": "region",
        "type": "string",
        "displayName": "Region",
        "placeholder": "us-east-1",
        "required": true,
        "hint": "AWS region where the bucket is located",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/s3",
        "secret": false
      },
      {
        "key": "access_key_id",
        "type": "string",
        "displayName": "Access Key ID",
        "placeholder": "AKIA...",
        "required": false,
        "hint": "AWS access key ID",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/s3",
        "secret": true
      },
      {
        "key": "secret_access_key",
        "type": "string",
        "displayName": "Secret Access Key",
        "placeholder": "secret...",
        "required": false,
        "hint": "AWS secret access key",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/s3",
        "secret": true
      },
      {
        "key": "path",
        "type": "string",
        "displayName": "Path",
        "placeholder": "data/",
        "required": false,
        "hint": "Path prefix within the bucket (optional)",
        "docsUrl": "https://docs.rilldata.com/reference/connectors/s3",
        "secret": false
      }
    ]
  }
} 